@{
    var login = ViewData["login"];
}
<h3>Пароль Вы можете получить в Telegram-боте BooksShop2023Bot</h3>﻿

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Users" asp-action="GetPassword" asp-antiforgery="true" method="post">
            <div class="form-group">
                <label>Логин</label> <br />
                <input type="text" name="login" class="form-control" value="@login" />
                <label>Пароль</label> <br />
                <input type="password" name="password" class="form-control" />
            </div>
            <div class="row">
                <div class="col-md-6 mx-auto">
                    <button class="btn btn-outline-primary btn-block" type="submit">Войти</button>
                </div>
            </div>
        </form>
    </div>
</div>
@if (!ViewData["errors"].Equals(""))
{ 
    @ViewData["errors"]
}
